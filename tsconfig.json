{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}